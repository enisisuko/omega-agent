{
  "name": "@omega/desktop",
  "version": "2.0.2",
  "description": "Omega Agent — Trace-First AI Agent Desktop",
  "author": "Omega Team",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder --win",
    "electron:build:dir": "vite build && electron-builder --win --dir",
    "electron:build:full": "pnpm --filter @omega/shared build && pnpm --filter @omega/db build && pnpm --filter @omega/providers build && pnpm --filter @omega/core build && electron-rebuild -f -w better-sqlite3 && vite build && electron-builder --win",
    "test": "vitest run",
    "lint": "tsc --noEmit"
  },
  "build": {
    "appId": "com.omega.agent",
    "productName": "Omega Agent",
    "copyright": "Copyright © 2026 Omega",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/@modelcontextprotocol/server-filesystem/**/*",
      "node_modules/@modelcontextprotocol/sdk/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/nanoid/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build-resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Omega Agent"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build-resources/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build-resources/icon.png"
    },
    "extraResources": [
      {
        "from": "../../node_modules/@modelcontextprotocol/server-filesystem/dist",
        "to": "mcp-servers/filesystem",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "@omega/core": "workspace:*",
    "@omega/db": "workspace:*",
    "@omega/providers": "workspace:*",
    "@omega/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@modelcontextprotocol/server-filesystem": "^2026.1.14",
    "clsx": "^2.1.1",
    "framer-motion": "^11.3.0",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^2.4.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.11",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^35.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.4.5",
    "vite": "^5.3.4",
    "vite-plugin-electron": "^0.28.8",
    "vitest": "^1.6.0"
  }
}
